<% layout('index') %>
<h1>Update Post </h1>
<form action="/posts/update/<%=post.id %>" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= post.title %>" />

  <label for="content">Content</label>
  <textarea id="content" name="content" cols="30" rows="10"> <%= post.content %></textarea>
  <button class="large button success">Update Post</button>
</form>
